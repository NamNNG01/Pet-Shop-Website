<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <servlet>
        <servlet-name>Login_Account_Servlet</servlet-name>
        <servlet-class>Controller.Login_Account_Servlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Homepage_Servlet</servlet-name>
        <servlet-class>Controller.Homepage_Servlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Register_Account_Servlet</servlet-name>
        <servlet-class>Controller.Register_Account_Servlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>OTP_RegisterAcc_Servlet</servlet-name>
        <servlet-class>Controller.OTP_RegisterAcc_Servlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Recover_Account_Servlet</servlet-name>
        <servlet-class>Controller.Recover_Account_Servlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Login_Google_Servlet</servlet-name>
        <servlet-class>Controller.Login_Google_Servlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Register_Info_Servlet</servlet-name>
        <servlet-class>Controller.Register_Info_Servlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>OTP_RecoverAcc_Servlet</servlet-name>
        <servlet-class>Controller.OTP_RecoverAcc_Servlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RecoverPass_Account_Servlet</servlet-name>
        <servlet-class>Controller.Recover2_Account_Servlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login_Account_Servlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Homepage_Servlet</servlet-name>
        <url-pattern>/homepage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Register_Account_Servlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>OTP_RegisterAcc_Servlet</servlet-name>
        <url-pattern>/verify-otp</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Recover_Account_Servlet</servlet-name>
        <url-pattern>/recover</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Login_Google_Servlet</servlet-name>
        <url-pattern>/login-google</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Register_Info_Servlet</servlet-name>
        <url-pattern>/register-info</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>OTP_RecoverAcc_Servlet</servlet-name>
        <url-pattern>/verify-otp-recover</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RecoverPass_Account_Servlet</servlet-name>
        <url-pattern>/recover-password</url-pattern>
    </servlet-mapping>
</web-app>
